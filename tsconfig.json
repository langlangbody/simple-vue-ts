{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext", // 开启异步加载组件
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames":true,
    "listFiles": true,
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.vue",
    "src/*.vue",
    "src/*.ts",
    "src/*.js",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
